<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top|center">

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/myshape"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="2dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/noconn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="@string/initruns"
            android:textColor="#ffcc4343"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <ListView
            android:id="@+id/switches0"
            android:layout_width="@dimen/colwidth"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp"
            android:visibility="gone" />

        <ListView
            android:id="@+id/switches1"
            android:layout_width="@dimen/colwidth"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/switches0"
            android:visibility="gone" />

        <ListView
            android:id="@+id/switches2"
            android:layout_width="@dimen/colwidth"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/switches1"
            android:visibility="gone" />

        <ListView
            android:id="@+id/lightscenes"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/switches2"
            android:visibility="gone" />

        <ListView
            android:id="@+id/values0"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/lightscenes"
            android:visibility="gone" />

        <ListView
            android:id="@+id/values1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/values0"
            android:visibility="gone" />

        <ListView
            android:id="@+id/values2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/values1"
            android:visibility="gone" />

        <ListView
            android:id="@+id/commands0"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/values2"
            android:visibility="gone" />

        <ListView
            android:id="@+id/commands1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/commands0"
            android:visibility="gone" />

        <ListView
            android:id="@+id/commands2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/commands1"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>