<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow android:layout_width="match_parent">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/conf_bg_header_1"
                    android:paddingLeft="10dp"
                    android:text="@string/portrait"
                    android:textColor="@color/conf_text_header_1"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/layout_portrait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp">

                    <RadioButton
                        android:id="@+id/layout_portrait_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:tag="@string/LAYOUT_HORIZONTAL"
                        android:text="@string/horizontal"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/layout_portrait_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="@string/LAYOUT_VERTICAL"
                        android:text="@string/vertical"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/layout_portrait_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="@string/LAYOUT_MIXED"
                        android:text="@string/mixed"
                        android:textSize="16sp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/conf_bg_header_1"
                    android:paddingLeft="10dp"
                    android:text="@string/landscape"
                    android:textColor="@color/conf_text_header_1"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/layout_landscape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp">

                    <RadioButton
                        android:id="@+id/layout_landscape_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:tag="@string/LAYOUT_HORIZONTAL"
                        android:text="@string/horizontal"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/layout_landscape_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="@string/LAYOUT_VERTICAL"
                        android:text="@string/vertical"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/layout_landscape_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="@string/LAYOUT_MIXED"
                        android:text="@string/mixed"
                        android:textSize="16sp" />
                </RadioGroup>
            </LinearLayout>
        </TableRow>
    </TableLayout>
</ScrollView>