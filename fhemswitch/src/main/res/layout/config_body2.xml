<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/configBody"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/configshape"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.28"
            android:background="@color/conf_bg_header_1"
            android:gravity="center_vertical|left"
            android:paddingLeft="8dp"
            android:textColor="@color/conf_text_header_1"
            android:textSize="14sp">

            <TextView
                android:id="@+id/installedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/installed_version"
                android:textColor="@color/conf_text_header_1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/installedView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/installedLabel"
                android:layout_alignRight="@id/installedLabel"
                android:layout_below="@id/installedLabel"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/conf_text_header_1"
                android:textSize="14sp" />

        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.44"
            android:background="@color/conf_bg_header_1"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="@string/config_header"
            android:textColor="@color/conf_text_header_1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.28"
            android:background="@color/conf_bg_header_1"
            android:gravity="center_vertical|right"
            android:paddingRight="8dp"
            android:textColor="@color/conf_text_header_1"
            android:textSize="14sp">

            <TextView
                android:id="@+id/latestLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/latest_version"
                android:textColor="@color/conf_text_header_1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/latestView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/latestLabel"
                android:layout_alignRight="@id/latestLabel"
                android:layout_below="@id/latestLabel"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/conf_text_header_1"
                android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/config_bodyblock_url"></include>

    <include layout="@layout/config_bodyblock_layout2"></include>

    <include layout="@layout/config_bodyblock_message"></include>

</LinearLayout>
