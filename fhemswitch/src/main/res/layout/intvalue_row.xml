<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/intvalue_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/intvalue_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_weight="1"
        android:paddingBottom="5dp"
        android:paddingTop="3dp"
        android:textAllCaps="false"
        android:textColor="@color/text_standard"
        android:textSize="15sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/intvalue_down_fast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/myshape_proz"
        android:padding="5dp"
        android:contentDescription="@string/switchicon"
        android:src="@drawable/arrow_left_double" />

    <ImageView
        android:id="@+id/intvalue_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/myshape_proz"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/arrow_left" />

    <TextView
        android:id="@+id/intvalue_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:paddingTop="6dp"
        android:textAllCaps="false"
        android:textColor="@color/text_standard"
        android:textSize="18sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/intvalue_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/myshape_proz"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/arrow_right" />

    <ImageView
        android:id="@+id/intvalue_up_fast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/myshape_proz"
        android:padding="5dp"
        android:src="@drawable/arrow_right_double" />
</LinearLayout>
